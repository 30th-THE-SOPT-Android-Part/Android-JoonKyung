<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SOPTLEE" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="textViewBold" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/noto_sans_kr_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="textViewRegular" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/noto_sans_kr_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="textViewMedium" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/noto_sans_kr_medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="editTextBold" parent="android:Widget.EditText">
        <item name="android:fontFamily">@font/noto_sans_kr_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="editTextRegular" parent="android:Widget.EditText">
        <item name="android:fontFamily">@font/noto_sans_kr_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="editTextMedium" parent="android:Widget.EditText">
        <item name="android:fontFamily">@font/noto_sans_kr_medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="buttonBold" parent="android:Widget.Button">
        <item name="android:fontFamily">@font/noto_sans_kr_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="buttonMedium" parent="android:Widget.Button">
        <item name="android:fontFamily">@font/noto_sans_kr_medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>