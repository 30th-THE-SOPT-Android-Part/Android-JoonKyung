<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="cameraFragment"
            type="com.lee989898.soptlee.camera.CameraFragment" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".camera.CameraFragment">

        <ImageView
            android:id="@+id/camera_img_iv"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/camera_explain_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="사진을 첨부해주세요"
            android:textSize="16sp"
            android:theme="@style/textViewBold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/camera_img_iv" />

        <Button
            android:id="@+id/camera_insert_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/sopt_main_purple"
            android:onClick="@{()->cameraFragment.gallerySelect()}"
            android:text="첨부하기"
            android:textColor="@color/white"
            android:theme="@style/buttonBold"
            app:layout_constraintTop_toBottomOf="@id/camera_explain_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>